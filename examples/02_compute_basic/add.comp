#version 450
#extension GL_EXT_nonuniform_qualifier : require

layout(set = 0, binding = 0) buffer Data { uint values[]; } all_buffers[];

void main() {
    uint idx = gl_GlobalInvocationID.x;
    // We used index 0 in descriptors.update_buffer_set
    all_buffers[0].values[idx] = all_buffers[0].values[idx] + 1;
}
